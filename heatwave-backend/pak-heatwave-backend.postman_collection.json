{
  "info": {
    "name": "Pakistan Heatwave Backend",
    "_postman_id": "d1b4e1c4-0000-4000-a000-heatwave123456",
    "description": "Postman collection for Pakistan Heatwave Detection & Early Warning System backend.\nIncludes SSE stream, cities, events, single-city lookup, and health.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Events Stream (SSE)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/events/stream",
          "host": ["{{base_url}}"],
          "path": ["events", "stream"]
        },
        "description": "Server-Sent Events (SSE) stream for heat updates.\nNote: Postman doesn't fully render SSE; you may see chunked text."
      },
      "response": []
    },
    {
      "name": "Get Base Cities",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/cities",
          "host": ["{{base_url}}"],
          "path": ["api", "cities"]
        },
        "description": "Returns list of base (real) cities used for polling."
      },
      "response": []
    },
    {
      "name": "Get All Cities (Base + Synthetic)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/cities/all",
          "host": ["{{base_url}}"],
          "path": ["api", "cities", "all"]
        },
        "description": "Returns all cities including synthetic points used to densify the heatmap."
      },
      "response": []
    },
    {
      "name": "Get Recent Events (default limit 100)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/events/recent",
          "host": ["{{base_url}}"],
          "path": ["api", "events", "recent"]
        },
        "description": "Returns recent heat_update events from in-memory buffer (latest first)."
      },
      "response": []
    },
    {
      "name": "Get Recent Events (limit=20)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/events/recent?limit=20",
          "host": ["{{base_url}}"],
          "path": ["api", "events", "recent"],
          "query": [
            {
              "key": "limit",
              "value": "20"
            }
          ]
        },
        "description": "Returns last 20 events."
      },
      "response": []
    },
    {
      "name": "Get Single City Latest Data (by id)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/city?id=lahore",
          "host": ["{{base_url}}"],
          "path": ["api", "city"],
          "query": [
            {
              "key": "id",
              "value": "lahore"
            }
          ]
        },
        "description": "Get latest heat_update event for a single city by cityId (e.g. lahore, karachi, lahore-s1, etc.)."
      },
      "response": []
    },
    {
      "name": "Get Single City Latest Data (by name)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/city?name=Lahore",
          "host": ["{{base_url}}"],
          "path": ["api", "city"],
          "query": [
            {
              "key": "name",
              "value": "Lahore"
            }
          ]
        },
        "description": "Get latest heat_update event for a single city by display name (case-insensitive)."
      },
      "response": []
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Returns backend health, uptime, clients count, events count, poll interval, and city counts."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000"
    }
  ]
}
