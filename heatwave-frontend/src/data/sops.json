    "procedures": [
        {
            "id": "sop-001",
            "title": "Heat Stroke Emergency Response",
            "category": "Medical Emergency",
            "tags": [
                "Urgent",
                "First Aid",
                "Life Threatening"
            ],
            "audience": "General Public",
            "description": "Immediate actions to take when someone shows signs of heat stroke (unconsciousness, high body temp, dry skin).",
            "steps": [
                "Call Emergency Services (1122) immediately.",
                "Move the person to a cool, shaded area.",
                "Remove excess clothing.",
                "Cool the person rapidly: immersion in cool water, or wet cloths on head/neck/armpits.",
                "Do NOT give fluids if the person is unconscious."
            ],
            "critical_alert": true
        },
        {
            "id": "sop-002",
            "title": "Heat Exhaustion Management",
            "category": "First Aid",
            "tags": [
                "Warning",
                "Hydration",
                "Rest"
            ],
            "audience": "General Public",
            "description": "Steps to treat heat exhaustion before it escalates to heat stroke.",
            "steps": [
                "Move to a cool place immediately.",
                "Lie down and elevate legs slightly.",
                "Drink plenty of water or sports drinks.",
                "Monitor symptoms; if vomiting or confusion occurs, seek medical help."
            ],
            "critical_alert": false
        },
        {
            "id": "sop-003",
            "title": "Setting Up a Cooling Center",
            "category": "Management",
            "tags": [
                "Admin",
                "Logistics",
                "Facility"
            ],
            "audience": "Local Admins",
            "description": "Guidelines for establishing a temporary public cooling facility.",
            "steps": [
                "Identify a location with reliable AC and backup power.",
                "Ensure capacity for 50+ individuals with social distancing.",
                "Stock: Water (3L/person/day), ORS packets, First Aid kits.",
                "Designate separate areas for vulnerable groups (elderly, children).",
                "Post signage clearly at entrance and nearby intersections."
            ],
            "critical_alert": false
        },
        {
            "id": "sop-004",
            "title": "Outdoor Worker Safety Protocol",
            "category": "Workplace Safety",
            "tags": [
                "Labor",
                "Prevention",
                "Schedule"
            ],
            "audience": "Employers/Workers",
            "description": "Mandatory safety measures for construction and outdoor labor during heatwaves.",
            "steps": [
                "Shift heavy work to early morning (before 10 AM) or evening (after 6 PM).",
                "Mandatory 15-minute breaks every hour in shade.",
                "Provide unlimited cool drinking water.",
                "Implement a 'Buddy System' to monitor co-workers for signs of distress."
            ],
            "critical_alert": false
        },
        {
            "id": "sop-005",
            "title": "Hydration Guidelines",
            "category": "Prevention",
            "tags": [
                "Wellness",
                "Daily"
            ],
            "audience": "General Public",
            "description": "Daily water intake recommendations during extreme heat.",
            "steps": [
                "Drink at least 2-3 cups of water every hour while active.",
                "Avoid alcohol, caffeine, and sugary drinks.",
                "Monitor urine color: clear/pale yellow indicates good hydration.",
                "Eat water-rich foods (melons, cucumbers)."
            ],
            "critical_alert": false
        }
    ],
